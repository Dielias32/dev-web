    <Button
        android:id="@+id/btnAtivos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agendamentos Ativos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- Botão para Agendamentos Cancelados -->
    <Button
        android:id="@+id/btnCancelados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agendamentos Cancelados"
        app:layout_constraintTop_toBottomOf="@id/btnAtivos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Área onde os Fragments serão carregados -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnCancelados"
        app:layout_constraintBottom_toBottomOf="parent"/>






